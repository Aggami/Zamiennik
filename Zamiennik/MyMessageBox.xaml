<Window x:Class="Zamiennik.MyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zamiennik"
        mc:Ignorable="d"
        Title="Potwierdzenie" Height="120" Width="200">
<StackPanel HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="41,0,40.6,0.4">
            <TextBox x:Name="komunikat" FontSize="12" Margin="10" HorizontalAlignment="Center" Text="Czy na pewno?" ></TextBox>
            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="przycisk1" Content="Tak" Margin="10" Style="{StaticResource decisionButtons}" Visibility="Visible" Click="Yes_Click"></Button>
                <Button x:Name="przycisk2" Content="Nie" Margin="10" Style="{StaticResource decisionButtons}" Visibility="Visible"></Button>
            </StackPanel>
        </StackPanel>
</Window>
